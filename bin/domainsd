#!/usr/bin/env bash

RESULT=$(ps aux | grep "python3 -m domains_api" | grep -v grep | awk '{print $2}')

if [[ $1 = "stop" ]]; then
        kill $RESULT;
        exit;
else
        if [[ -z $RESULT ]]; then
                python3 -m domains_api.async_runner $1 > /dev/null &
        else
                echo "Daemon is already running"
        fi
fi

